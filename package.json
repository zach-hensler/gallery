{
  "name": "Gallery",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://gallery.zach-hensler.com",
  "scripts": {
    "dev": "vite",
    "upgrade": "npx npm-check-updates -u",
    "test": "vitest --run",
    "createCNAME": "echo gallery.zach-hensler.com > ./build/CNAME",
    "build": "tsc && vite build && npm run createCNAME",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "gh-pages": "^6.3.0",
    "preact": "^10.26.9"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
