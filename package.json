{
  "name": "Gallery",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://gallery.zach-hensler.com",
  "scripts": {
    "dev": "vite",
    "test": "vitest --run",
    "createCNAME": "echo gallery.zach-hensler.com > ./build/CNAME",
    "build": "tsc && vite build && npm run createCNAME",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "gh-pages": "^6.1.1",
    "preact": "^10.23.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5"
  }
}
